<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:background="@drawable/backgroundtest"
    android:id="@+id/hero_intro"

    android:orientation="vertical">

    <include layout="@layout/hero_item"
        android:id="@+id/hero"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#bf000000"
        android:orientation="vertical"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="-9dp"
        android:layout_marginRight="1dp"
        android:id="@+id/view2" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/hero_chart"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/hero_chart"/>

            <include layout="@layout/hero_stats"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />

            <include layout="@layout/hero_ability"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />
            <include layout="@layout/hero_ability"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />
            <include layout="@layout/hero_ability"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />
            <include layout="@layout/hero_ability"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>