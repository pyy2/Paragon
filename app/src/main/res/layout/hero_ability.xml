<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#bf000000"
        android:id="@+id/base_stats"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"

        />
    <View
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="#ba4C4A4A"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:rotation="45"
        android:layout_alignParentStart="true"
        android:id="@+id/view3" />

    <TextView
        android:layout_width="wrap_content"
        android:inputType="textPersonName"
        android:text="Ability Cost"
        android:ems="10"
        android:id="@+id/editText3"
        android:textSize="10dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/ability"
        android:layout_alignBottom="@+id/ability"
        android:layout_alignRight="@+id/base_statsdivider"
        android:layout_alignEnd="@+id/base_statsdivider" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_green_light"
        android:layout_marginTop="69.5dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft= "96dp"
        android:id="@+id/base_statsdivider"
        android:paddingTop="15dp"/>

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:srcCompat="@drawable/ps4_square"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/editText"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slice"
        android:id="@+id/ability"
        android:textColor="@android:color/white"
        android:paddingBottom="3dp"
        android:textSize="28dp"
        android:layout_alignBottom="@+id/base_statsdivider"
        android:layout_alignLeft="@+id/base_statsdivider"
        android:layout_alignStart="@+id/base_statsdivider" />

    <TextView
        android:inputType="textPersonName"
        android:text="Q /"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/base_stats"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="Hero Base Stats"
        android:textColor="@android:color/white"
        android:background="@drawable/countslice"
        android:id="@+id/healthregen"
        android:layout_alignTop="@+id/ability"
        android:layout_alignLeft="@+id/base_stats"
        android:layout_alignStart="@+id/base_stats" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Ability Description"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignBottom="@+id/base_stats"
        android:layout_centerHorizontal="true" />


