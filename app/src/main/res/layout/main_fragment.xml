<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.paragon.paulyu.myapplication.Main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="@color/charcoalBlack"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/start"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="5dp"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/background1"
            app:riv_corner_radius="10dp"
            app:riv_border_width="2dip"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            android:scaleType="centerCrop"
            android:paddingBottom="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/image1"
                android:background="#af000000"
                android:text="New Hero Release!"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:attr/textAppearanceSmallInverse"
                android:layout_above="@+id/image1"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_below="@+id/image1"
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/background2"
            app:riv_corner_radius="10dp"
            app:riv_border_width="2dip"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            android:scaleType="centerCrop"
            android:paddingBottom="5dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/image2"
                android:background="#af000000"
                android:text="Update v33"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmallInverse"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/image2"/>


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image3"
            android:paddingBottom="5dp"
            android:layout_below="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/background3"
            app:riv_corner_radius="10dp"
            app:riv_border_width="2dip"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/image3"
                android:text="Monolith Part 1"
                android:gravity="center"
                android:background="#af000000"
                android:textAppearance="?android:attr/textAppearanceSmallInverse"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/image3"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image4"
            android:layout_below="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/background5"
            app:riv_corner_radius="10dp"
            app:riv_border_width="2dip"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            android:paddingBottom="5dp"
            android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/image4"
                android:background="#9f000000"
                android:text="Monolith Part 4"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmallInverse"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/image4"/>

    </RelativeLayout>
</ScrollView>