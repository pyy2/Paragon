            <!--android:layout_marginEnd="20dp" />-->



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_red_dark"
            android:layout_alignTop="@id/abilitydivider"
            android:layout_marginRight="40dp"
            android:layout_marginLeft= "40dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="SLICE"
            android:textColor="@android:color/holo_orange_light"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:id="@+id/Ability1"
            android:textSize="24sp"
            android:layout_alignTop="@+id/abilitydivider"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:text="Melee basic attack dealing 52 Physical Damage."
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/textView8"
            android:layout_alignTop="@id/Ability1"/>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="300dp"-->
            <!--android:background="#bf000000"-->
            <!--android:layout_alignTop="@id/base_statsdivider"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_marginTop="15dp"-->
            <!--&gt;</View>-->

    </RelativeLayout>
</FrameLayout>
