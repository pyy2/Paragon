<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="#af000000"
        android:layout_alignTop="@id/view2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:id="@+id/view" />

    <ProgressBar
        android:id="@+id/progressBar1"

        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="10"
        android:minHeight="10dp"
        android:minWidth="200dp"
        android:progress="7"
        android:layout_marginTop="28dp"
        android:paddingTop="1dp"

        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_alignTop="@id/view"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="35dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobility"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:id="@+id/textView5"
        android:layout_above="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <ProgressBar
        android:id="@+id/progressBar2"

        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="10"
        android:minHeight="10dp"
        android:minWidth="200dp"
        android:progress="2"
        android:layout_marginTop="5dp"

        android:layout_below="@+id/progressBar1"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:paddingTop="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Attack"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@id/progressBar2"
        android:layout_alignRight="@id/view"
        android:layout_marginRight="35dp"
        android:textSize="12dp"
        android:id="@+id/textView" />

    <ProgressBar
        android:id="@+id/progressBar3"

        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="10"
        android:minHeight="10dp"
        android:minWidth="200dp"
        android:progress="1"
        android:layout_marginTop="5dp"
        android:paddingTop="1dp"

        android:layout_below="@+id/progressBar2"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Durability"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@id/progressBar3"
        android:layout_alignRight="@id/view"
        android:layout_marginRight="35dp"
        android:textSize="12dp"
        android:id="@+id/textView6" />

    <ProgressBar
        android:id="@+id/progressBar4"

        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="10"
        android:minHeight="10dp"
        android:minWidth="200dp"
        android:progress="9"
        android:layout_marginTop="5dp"
        android:paddingTop="1dp"

        android:layout_below="@+id/progressBar3"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ability Attack"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/progressBar4"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

