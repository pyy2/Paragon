<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_alignTop="@id/section3"
        android:layout_marginTop="15dp"
        android:background="#bf000000"
        android:id="@+id/base_stats"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Base Stats"
    android:layout_margin="28dp"
    android:id="@+id/title"
    android:textColor="@android:color/white"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_light"
        android:layout_alignBottom="@id/title"
        android:layout_marginTop="33dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft= "40dp"
        android:id="@+id/base_statsdivider"
        android:paddingTop="15dp"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:gravity="center"
        android:text="Hero Base Stats"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/base_stats"
        android:layout_alignRight="@+id/base_statsdivider"
        android:layout_marginRight="120dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/healthregenicon"
        android:id="@+id/healthregen" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/healthregen"
        android:textColor="@android:color/white"
        android:layout_alignLeft="@id/healthregen"
        android:layout_marginLeft="30dp"
        android:text="1.8 Health/s"
        android:textSize="13.5dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:gravity="center"
        android:text="Hero Base Stats"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/health"
        android:layout_alignLeft="@+id/base_statsdivider"
        android:layout_alignStart="@+id/base_statsdivider"
        android:layout_marginLeft="18dp"

        android:layout_marginTop="21dp"
        android:background="@drawable/manaicon"
        android:id="@+id/mana" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mana"
        android:textColor="@android:color/white"
        android:layout_alignLeft="@id/mana"
        android:layout_marginLeft="30dp"
        android:text="200 Mana"
        android:textSize="13.5dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView9" />
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:gravity="center"
        android:text="Hero Base Stats"
        android:textColor="@android:color/white"
        android:layout_alignTop="@id/healthregen"
        android:layout_alignRight="@+id/base_statsdivider"
        android:layout_marginRight="120dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/manaregenicon"
        android:id="@+id/manaregen" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/manaregen"
        android:textColor="@android:color/white"
        android:layout_alignLeft="@id/manaregen"
        android:layout_marginLeft="30dp"
        android:text="1.1 Mana/s"
        android:textSize="13.5dp"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:gravity="center"
        android:text="Hero Base Stats"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/mana"
        android:layout_alignLeft="@+id/base_statsdivider"
        android:layout_alignStart="@+id/base_statsdivider"
        android:layout_marginLeft="18dp"

        android:layout_marginTop="21dp"
        android:background="@drawable/physicalarmoricon"
        android:id="@+id/basicarmor" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/basicarmor"
        android:textColor="@android:color/white"
        android:layout_alignLeft="@id/basicarmor"
        android:layout_marginLeft="30dp"
        android:text="6 Basic Armor"
        android:textSize="13.5dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:gravity="center"
        android:text="Hero Base Stats"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/mana"
        android:layout_alignRight="@+id/base_statsdivider"
        android:layout_marginRight="120dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/physicalarmoricon"
        android:id="@+id/abilityarmor" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/abilityarmor"
        android:textColor="@android:color/white"
        android:layout_alignLeft="@id/abilityarmor"
        android:layout_marginLeft="30dp"
        android:text="6 Ability Armor"
        android:textSize="13.5dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:gravity="center"
        android:text="Hero Base Stats"
        android:textColor="@android:color/white"
        android:background="@drawable/healthicon"
        android:id="@+id/health"
        android:layout_alignTop="@+id/healthregen"
        android:layout_alignLeft="@+id/mana"
        android:layout_alignStart="@+id/mana" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="500 Health"
        android:textSize="13.5dp"
        android:layout_alignBottom="@+id/health"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:id="@+id/textView10" />

    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
