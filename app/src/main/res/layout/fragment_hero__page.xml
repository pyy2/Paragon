<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"

    tools:context="layout.Hero_Page">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:background="@drawable/backgroundtest"

        android:orientation="vertical">

        <TextView
            android:layout_marginTop="6dp"
            android:layout_marginLeft="148dp"
            android:layout_width="match_parent"
            android:layout_height="136dp"
android:layout_marginRight="1dp"
            android:background="#bf000000"
            android:id="@+id/background"
            android:layout_marginBottom="5dp"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:paddingLeft="2dp"
            android:background="@android:color/holo_orange_light"
            android:layout_alignLeft="@id/background"
            android:layout_alignBottom="@id/background"
            android:id="@+id/divider"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:background="#af000000"
            android:layout_alignTop="@id/divider"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/view" />

        <View
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#bf000000"
            android:layout_alignTop="@id/divider"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="1dp"
            android:id="@+id/view2" />
        <TextView
            android:id="@+id/hero_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@android:color/white"
            android:textSize="24dp"
            android:background="@color/hero_tab"
            android:layout_alignTop="@+id/background"
            android:layout_alignLeft="@+id/background"
            android:layout_alignStart="@+id/background"

            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="13dp"
            android:layout_alignBottom="@+id/hero_attack"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
android:layout_marginRight="1dp"
            android:text="Countess"
            />

        <TextView
            android:layout_marginLeft="148dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingLeft="13dp"
            android:paddingTop="15dp"
            android:textColor="@color/charcoalBlack"
            android:id="@+id/hero_attack"
            android:paddingBottom="11dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="39dp"

            android:text="- MELEE -"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/hero_portrait"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:riv_corner_radius="10dp"
            app:riv_border_width="2dip"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            android:scaleType="fitStart"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:src="@drawable/countess"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginTop="14dp"
            android:layout_marginRight="10dp"
            android:id="@+id/affinity2"
            android:layout_alignTop="@+id/hero_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:background="@drawable/furyicon"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="6dp"
            android:id="@+id/affinity"
            android:layout_alignTop="@+id/hero_name"
            android:layout_toLeftOf="@+id/affinity2"

            android:background="@drawable/corruptionicon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hero_name"
            android:id="@+id/hero_trait"
            android:background="#00000000"
            android:layout_alignBottom="@+id/background"
            android:textColor="@color/charcoalBlack"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/background"
            android:layout_alignStart="@+id/background"
            android:textAlignment="center"
            android:gravity="center"

            android:text="Assassin  Burst   Siege   Ganker  Durable"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="10dp"

            android:textSize="13dp"/>

        <ProgressBar
            android:id="@+id/progressBar1"

            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="10"
            android:minHeight="10dp"
            android:minWidth="200dp"
            android:progress="7"
            android:layout_marginTop="40dp"

            android:layout_below="@+id/hero_portrait"
            android:layout_alignLeft="@+id/view"
            android:layout_alignStart="@+id/view"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="35dp"
            />

        <ProgressBar
            android:id="@+id/progressBar2"

            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="10"
            android:minHeight="10dp"
            android:minWidth="200dp"
            android:progress="2"
            android:layout_marginTop="5dp"

            android:layout_below="@+id/progressBar1"
            android:layout_alignLeft="@+id/view"
            android:layout_alignStart="@+id/view"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Attack"
            android:textColor="@android:color/white"
            android:layout_alignBottom="@id/progressBar2"
            android:layout_alignRight="@id/view"
            android:layout_marginRight="35dp"
            android:textSize="11dp"
            android:id="@+id/textView" />

        <ProgressBar
            android:id="@+id/progressBar3"

            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="10"
            android:minHeight="10dp"
            android:minWidth="200dp"
            android:progress="1"
            android:layout_marginTop="5dp"

            android:layout_below="@+id/progressBar2"
            android:layout_alignLeft="@+id/view"
            android:layout_alignStart="@+id/view"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="35dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durability"
            android:textColor="@android:color/white"
            android:layout_alignBottom="@id/progressBar3"
            android:layout_alignRight="@id/view"
            android:layout_marginRight="35dp"
            android:textSize="11dp"
            android:id="@+id/textView6" />

        <ProgressBar
            android:id="@+id/progressBar4"

            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="10"
            android:minHeight="10dp"
            android:minWidth="200dp"
            android:progress="9"
            android:layout_marginTop="5dp"

            android:layout_below="@+id/progressBar3"
            android:layout_alignLeft="@+id/view"
            android:layout_alignStart="@+id/view"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="35dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_green_light"
            android:layout_alignTop="@id/progressBar4"
            android:layout_marginTop="33dp"
            android:id="@+id/section3"
            android:layout_marginRight="40dp"
            android:layout_marginLeft= "40dp"
            android:paddingTop="15dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobility"
            android:textColor="@android:color/white"
            android:textSize="11dp"
            android:id="@+id/textView5"
            android:layout_above="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ability Attack"
            android:textColor="@android:color/white"
            android:textSize="11dp"
            android:id="@+id/textView7"
            android:layout_alignBottom="@+id/progressBar4"
            android:layout_alignRight="@+id/textView6"
            android:layout_alignEnd="@+id/textView6" />

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignTop="@id/section3"
            android:layout_marginTop="15dp"
            android:background="#bf000000"
            android:id="@+id/base_stats"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_light"
            android:layout_alignBottom="@id/base_stats"
            android:layout_marginTop="33dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft= "40dp"
            android:id="@+id/base_statsdivider"
            android:paddingTop="15dp"/>
        <android.support.design.widget.TabLayout
        android:id="@+id/hero_tabs"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
            android:background="@color/hero_tab"
            android:layout_alignTop="@id/base_statsdivider"
        android:layout_marginTop="15dp"
        app:tabIndicatorColor="@android:color/holo_orange_light"
        >

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TabLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#cf000000"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:textColor="@android:color/white"
            android:layout_alignTop="@id/hero_tabs"
            android:id="@+id/abilitydivider"
            android:paddingTop="20dp"
            android:paddingLeft="50dp"

            >
        </TextView>


        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:text="Hero Base Stats"
            android:textColor="@android:color/white"
            android:layout_alignTop="@+id/base_stats"
            android:layout_alignLeft="@+id/progressBar4"
            android:layout_alignStart="@+id/progressBar4"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/healthicon"
            android:id="@+id/health" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:text="Hero Base Stats"
            android:textColor="@android:color/white"
            android:layout_alignTop="@+id/base_stats"
            android:layout_alignRight="@+id/progressBar4"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/healthregenicon"
            android:id="@+id/healthregen" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:text="Hero Base Stats"
            android:textColor="@android:color/white"
            android:layout_alignTop="@+id/health"
            android:layout_alignLeft="@+id/progressBar4"
            android:layout_alignStart="@+id/progressBar4"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/manaicon"
            android:id="@+id/mana" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:text="Hero Base Stats"
            android:textColor="@android:color/white"
            android:layout_alignTop="@id/healthregen"
            android:layout_alignRight="@+id/progressBar4"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/manaregenicon"
            android:id="@+id/manaregen" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:text="Hero Base Stats"
            android:textColor="@android:color/white"
            android:layout_alignTop="@+id/mana"
            android:layout_alignLeft="@+id/progressBar4"
            android:layout_alignStart="@+id/progressBar4"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/physicalarmoricon"
            android:id="@+id/basicarmor" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:text="Hero Base Stats"
            android:textColor="@android:color/white"
            android:layout_alignTop="@+id/mana"
            android:layout_alignRight="@+id/progressBar4"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/physicalarmoricon"
            android:id="@+id/abilityarmor" />
